@model MowerHelper.Models.Classes.clsAuthorization
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
@*    <meta name="viewport" content="width=device-width" />*@
    <title>Authorization</title>
        <script type="text/javascript">
            window.history.forward(-1);
            function Validatelogindetails() {
                if (document.getElementById('Username').value == '') {
                    alert("Please enter user name");
                    document.getElementById('Username').focus();
                    return false;
                }
                if (document.getElementById('Password').value == '') {
                    alert("Please enter password");
                    document.getElementById('Password').focus();
                    return false;
                }
            }
    </script>
</head>
<body>
      @using (Html.BeginForm("Authorization", "Home", FormMethod.Post, null))
  {
    <div>
            <table width="100%" cellpadding="0" cellspacing="0" border="0"><tr><td style="text-align:center;"><h1>Welcome to Mower Helper</h1></td></tr></table>
        <table id="tblscreen" runat="server" cellpadding="0" cellspacing="1" width="50%" align="center">
                                <tr>
                                <td width="310px" style="font-family: Arial; font-size: 10pt; color: #FF0000;" colspan="2" align="center">
                                    @Html.ValidationSummary(true)
                                </td>
                            </tr>
                    <tr align="center"><td colspan="2" style="text-align:center;padding-right: 160px;">
                        <label id="lblheading" style="font-weight:bold"></label>
            <span style="font-weight:bold">Authorized users</span>

                           </td></tr>
        <tr><td></td></tr>
                    <tr>
                                <td style="font-family: Arial; font-size: 9pt; padding-left: 25px; padding-top: 2px; text-align:right;">
                                    <span style="font-size: 9pt; font-weight: bold;">User name :&nbsp;</span>
                                </td>
                                <td style="font-family: Arial; font-size: 9pt; padding-right: 60px; text-align:left;">
                                    <div class="editor-field">
                                        @Html.TextBoxFor(Model => Model.Username, new { @class = "textfield", style = "width:12em;" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td style="font-family: Arial; font-size: 9pt; padding-right: 70px; text-align:right"
                                    colspan="2" height="20px">
                                    <div class="editor-field" style="color: #FF0000; font-size: 1em;">
                                        <span style="clear: both; float: right;">
                                            @Html.ValidationMessageFor(Model => Model.Username)
                                        </span>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td align="right" style="font-family: Arial; font-size: 9pt; padding-left: 25px; padding-top: 2px; text-align:right;">
                                    <span style="font-size: 9pt; font-weight: bold;">Password :&nbsp;</span>
                                </td>
                                <td style="font-family: Arial; font-size: 9pt; padding-right: 60px; text-align:left">
                                    <div class="editor-field">
                                        @Html.PasswordFor(Model => Model.Password, new { @class = "textfield", style = "width:12em;" })
                                    </div>
                                </td>
                            </tr>
                            <tr align="left">
                                <td align="right" style="font-family: Arial; font-size: 9pt; padding-right: 70px;"
                                    colspan="2" height="20px">
                                    <div class="editor-field">
                                        <span style="clear: both; float: right; color: #FF0000; font-size: 1em;">
                                            @Html.ValidationMessageFor(Model => Model.Password)
                                        </span>
                                    </div>
                                </td>
                            </tr>
                                <tr align="center"><td align="center" colspan="2" style="padding-right: 225px;">
<input type="submit" class="button" value="Log In" onclick="javascript: if (Validatelogindetails() == false) { return false; };" style="font-weight: bold; cursor: pointer;" />

                           </td></tr>
                                        <tr>
                                <td style="text-align:center;">
                                    <span style="float: right; padding-right: 60px;">
                                        
                                    </span>
                                </td>
                                            <td></td>
                            </tr>
            </table>
    </div>
      }
</body>
</html>
