          var url = $(this).attr('href');
          $("#dialog-confirm").dialog({
              autoOpen: false,
              height: 170,
              width: 350,
              show: { effect: 'drop', direction: "up" },
              modal: true,
              buttons: {
                  "Yes": function () {
                      $(this).dialog("close");
                      window.location = url;

                  },
                  "No": function () {
                      $(this).dialog("close");

                  }
              }
          });
          $("#dialog-confirm").dialog('open');
          return false;
      });
