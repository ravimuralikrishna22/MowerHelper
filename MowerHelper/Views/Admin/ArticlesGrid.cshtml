     <div class="content-box-content">
                                                                       @{ WebGrid provgrid = new WebGrid(rowsPerPage: Convert.ToInt32(ViewBag.pagesize ?? "10"));}
                                            @{WebGrid grid = provgrid.Bind(rowCount: Convert.ToInt32(ViewBag.totrec), source: Model, autoSortAndPage: false);
                                              if (grid.TotalRowCount != 0)
                                              {
                                                  int count = 0;
                                                  string pager = grid.Pager().ToString();
                                                  string pageno = (Request["page"] == null ? "1" : Request["page"]);
                                                  string newpager = System.Text.RegularExpressions.Regex.Replace(pager, "(\\d+) ", "<span class='selected'>" + pageno + "</span>");
                                                  string gridhtml = grid.GetHtml(tableStyle: "gridTable", headerStyle: "gridHead", rowStyle: "gridRow", alternatingRowStyle: "gridAltRow",

                                                  columns: grid.Columns(

                                                  grid.Column("Title", "Article title", canSort: false),
                                                                                                    grid.Column("", "Article description", canSort: false,
                                                 format:@<text>@{@Html.Raw(System.Web.HttpUtility.HtmlDecode((string)item.Article_Desc))
                                                                                                                                                                            }
                                                                                                                                                                                   
                                                                                                                                                                                     </text>),
                                                     grid.Column("", "Edit", canSort: false,
                                                  format:@<text>@Html.ActionLink(" ", "EditArticle", new { Article_ID = (int)item.Article_ID, Title = (string)item.Title },
          new { @style = "background: url('../Images/edit.gif') no-repeat ;height: 40px;width:30px;padding-left:20px;padding-bottom:15px;", @title = "Click here to Edit" })</text>),

                                                   grid.Column("", "Delete", canSort: false, style: "delete",
                                                  format:@<text>@Html.ActionLink(" ", "Deletearticle", new { Article_ID = (int)item.Article_ID },
                                                  new { @style = "background: url('../Images/cross.png') no-repeat ;height: 15px;padding-left:15px;", @class = "confirmDialog", @title = "Click here to delete" })</text>)


                                                                    )).ToString();


                                                  gridhtml = System.Text.RegularExpressions.Regex.Replace(gridhtml, "<tfoot>([^<]*|<[^/]*|</[^t]*)*</tfoot>", "");
                            @(new HtmlString(gridhtml))
                            
                            <br />

                            <div class="gridFooter" style="padding-left: 500px;">@(new HtmlString(newpager))</div>  
                            <br />
                                              }
