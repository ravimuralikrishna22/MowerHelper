@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
@*    <meta name="viewport" content="width=device-width" />*@
   <title>Mower Helper-Find an Mower Helper</title>
      <script src="~/Scripts/Expire.js" type="text/javascript"></script>
</head>
<body>
    @using (Html.BeginForm("Temporarypassword", "Providers", FormMethod.Post, null))
    {
  <input type="hidden" id="HdnProviderName" name="HdnProviderName" value="@ViewBag.ProviderName" />
    <input type="hidden" id="Hdnusername" name="Hdnusername" value="@ViewBag.email" />
        <input type="hidden" id="Hdnpassword" name="Hdnpassword" value="@ViewBag.password" />
        <input type="hidden" id="HdnLoginiD" name="HdnLoginiD" value="@ViewBag.Login_ID" />
                <input type="hidden" id="Hdnpracticeid" name="Hdnpracticeid" value="@ViewBag.Practice_ID" />
<table class="border_style" cellspacing="1" cellpadding="8" width="100%" align="center"
                border="0">
                <tr height="10" class="white_color" runat="server">
                    <td align="right" width="40%">
                        <strong>Provider name :</strong>
                    </td>
                    <td width="60%" align="left">
                        <label>@ViewBag.ProviderName</label>
                    </td>
                </tr>
                <tr height="10" class="white_color" runat="server">
                    <td align="right" width="40%">
                        <strong>Provider email address :</strong>
                    </td>
                    <td width="60%" align="left">
                        <label>@ViewBag.email</label>
                    </td>
                </tr>
                <tr height="10" runat="server" class="white_color">
                    <td align="right" width="40%">
                        <strong>Temporary password :</strong>
                    </td>
                    <td align="left" width="60%">
                        <label>@ViewBag.password</label>
                    </td>
                </tr>
            </table>
            
                    <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                    <tr class="background_color">
                                                        <td align="right" style="padding-top: 5px; padding-bottom: 5px; padding-right: 10px;">
                                                         <input type="submit" id="btnSave" value="Send" title="Save" class="button"/>&nbsp;

                                              <input type="button" class="close button" name="Cancel" value="Cancel" />
                                                        </td>
                                                    </tr>
                                                </table>
    }
</body>
</html>
