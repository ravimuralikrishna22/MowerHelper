@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
@*    <meta name="viewport" content="width=device-width" />*@
   <title>Mower Helper-Find an Mower Helper</title>
    <script type="text/javascript">
        function Validate() {


            document.getElementById('tdtype').bgColor = "White";
            document.getElementById('lblErrtype').style.display = 'none';
            document.getElementById('tddes').bgColor = "White";
            document.getElementById('lblErrdes').style.display = 'none';

            var type = trim(document.getElementById('txtEmailOptiontype').value);
            document.getElementById('txtEmailOptiontype').value = type;
            if (document.getElementById('txtEmailOptiontype').value == '') {
                document.getElementById('lblErrtype').style.display = '';
                document.getElementById('lblErrtype').innerHTML = 'Please enter email  option type';

                document.getElementById('tdtype').bgColor = "orange";
                document.getElementById('txtEmailOptiontype').focus();
                return false;
            }
            else {
                document.getElementById('tdtype').bgColor = "White";
                document.getElementById('lblErrtype').style.display = 'none';

            }

            var des = trim(document.getElementById('txtDescription').value);
            document.getElementById('txtDescription').value = des;
            if (document.getElementById('txtDescription').value == '') {
                document.getElementById('lblErrdes').style.display = '';
                document.getElementById('lblErrdes').innerHTML = 'Please enter email option description';
                document.getElementById('tddes').bgColor = "orange";
                document.getElementById('txtDescription').focus();
                return false;
            }
            else {
                document.getElementById('tddes').bgColor = "White";
                document.getElementById('lblErrdes').style.display = 'none';

            }
            if (document.getElementById('txtDescription').value.length > 1000) {
                document.getElementById('lblErrdes').style.display = '';
                document.getElementById('lblErrdes').innerHTML = 'Description can be up to 1000 characters';
                document.getElementById('tddes').bgColor = "orange";
                document.getElementById('txtDescription').focus();
                return false;
                return false;
            }
            else {
                document.getElementById('tddes').bgColor = "White";
                document.getElementById('lblErrdes').style.display = 'none';

            }


        }
    </script>
</head>
<body>
    @using (Html.BeginForm("Addmainoption", "Technicalarea", FormMethod.Post, null))
    {
 <div class="content-box">
       <div class="content-box-content">
           <table class="border_style" cellspacing="1" cellpadding="6" width="100%" align="center"
               border="0">
               <tr height="10" runat="server" class="white_color">
                   <th align="right" width="25%">
                       <b><font color="red">*</font></b> <strong>E-mail  option type :</strong>
                   </th>
                   <td align="left" id="tdtype" runat="server" width="75%">
                                                                              @Html.TextBox("txtEmailOptiontype", null, new { @class = "textfield", style = "width:350px", autocomplete = "off" })
                                                                                          &nbsp;&nbsp;&nbsp <span id="lblErrtype" style="font-weight: bold; color: Black"></span>
                   </td>
               </tr>
               <tr height="10" class="white_color" runat="server">
                   <th align="right">
                       <b><font color="red">*</font></b> <strong>E-mail  option description :</strong>
                   </th>
                   <td align="left" id="tddes" runat="server">
                       @Html.TextArea("txtDescription", null, 3, 3, new { @class = "textfield", style = "width:400px;height:80px;" })
                          <br />
                                (Maximum length upto 1000 characters)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <span id="lblErrdes" style="font-weight: bold; color: Black"></span>
                   </td>
               </tr>
           </table>
                                                                                       <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                    <tr class="background_color">
                                                        <td align="right" style="padding-top: 5px; padding-bottom: 5px; padding-right: 10px;">

                                             <input type="submit" id="btnSave" value="Save" title="Save" class="button" onclick="return Validate();" />
                                                          &nbsp;
                                              <input type="button" class="close button" name="Cancel" value="Cancel" />
                                                        </td>
                                                    </tr>
                                                </table>
      </div></div>
    }
</body>
</html>
