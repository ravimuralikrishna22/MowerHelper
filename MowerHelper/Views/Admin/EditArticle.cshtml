        }



        var dellist = document.getElementById('hdndelfaqid').value;

        if (dellist != "" && dellist != null) {
            var faq3 = dellist.split(",");

            for (var i = 0, len = faq3.length; i < len; i++) {
                var faq = document.getElementById('hdnfaqid').value;

