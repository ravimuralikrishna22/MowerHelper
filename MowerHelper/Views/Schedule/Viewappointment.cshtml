@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
@*    <meta name="viewport" content="width=device-width" />*@
   <title>Mower Helper-Find an Mower Helper</title>
    <script src="~/Scripts/Expire.js" type="text/javascript"></script>
   <script type="text/javascript">
       $(document).ready(function () {
           var vwshow = "@ViewBag.autorem";
           if (vwshow == "Yes") {
               document.getElementById('trVwRemYes').style.display = '';
               document.getElementById('trVwRemNo').style.display = 'none';
           }
           else {
               document.getElementById('trVwRemYes').style.display = 'none';
               document.getElementById('trVwRemNo').style.display = '';
           }
       });
   </script>
</head>
<body>
  <table class="border_style"  cellspacing="1" cellpadding="8" width="100%" align="center" border="0">              
                <tr class="nav_blue_color"   >
                    <td align="right" width="30%" style="font-size: 13px;">
                        <strong>Client name :&nbsp;</strong>
                    </td>
                    <td width="70%" style="font-size: 13px;">
                      @ViewBag.Epatname
                    </td>
                </tr>
                <tr class="white_color" >
                    <td align="right" width="30%" style="font-size: 13px;">
                        <strong>Appointment type :&nbsp;</strong>
                    </td>
                    <td width="70%" style="font-size: 13px;">
                  @ViewBag.EApptType
                    </td>
                </tr>               
                <tr class="nav_blue_color"   >
                    <td align="right" width="30%" style="font-size: 13px;">
                        <strong>Date :&nbsp;</strong>
                    </td>
                    <td width="70%" style="font-size: 13px;">
                        <table border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tr class="nav_blue_color">
                                <td width="24%">
                                 @ViewBag.Eaptdate
                                </td>
                                 <td width="10%" align="right">
                                 <strong>Time :&nbsp;</strong>
                                </td>
                                 <td width="24%" align="left">
                                 @ViewBag.EaptTime
                                </td>
                                 <td width="15%" align="right">
                                 <strong>Duration :&nbsp;</strong>
                                </td>
                                 <td  align="left">
                                 @ViewBag.EaptDuration
                                </td>
                            </tr>
                        </table>
                     
                    </td>
                </tr>
                <tr class="white_color"  id="trVwRemNo" style="display:none">
                    <td align="right" width="30%" style="font-size: 13px;">
                        <strong>Auto appointment reminder :&nbsp;</strong>
                    </td>
                    <td width="70%" style="font-size: 13px;">
                  @ViewBag.autorem
                    </td>
                </tr>
                <tr class="white_color" id="trVwRemYes"  style="display:none">
                    <td align="right" width="30%" style="font-size: 13px;">
                        <strong>Auto appointment reminder :&nbsp;</strong>
                    </td>
                    <td width="70%" style="font-size: 13px;">
                 <table border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tr class="white_color">
                                <td width="10%">
                                  @ViewBag.autorem
                                </td>
                                 <td width="30%" align="right">
                                 <strong>hours prior to appointment :&nbsp;</strong>
                                </td>
                                 <td width="10%" align="left">
                                 @ViewBag.VwReminderHR
                                </td>
                                 <td width="15%" align="right">
                                 <strong>Client email :&nbsp;</strong>
                                </td>
                                 <td  align="left">
                                 @ViewBag.GetEmail
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr class="nav_blue_color" style="height:160px"   >
                    <td align="right" width="30%" style="font-size: 13px;">
                      <strong>&nbsp;&nbsp;&nbsp;Notes :&nbsp;</strong>
                    </td>
                    <td align="left" width="70%">
                    @ViewBag.Enote                   
                    </td>
                </tr>                              
            </table>
    <br />
    <table border="0" cellpadding="0" cellspacing="0" width="98%">
             <tr style="text-align:right">
                 <td>                
                  <input type="button" class="ViewApptclose button" name="Cancel" value="Cancel" />
                 </td>
             </tr>
    </table>
    
</body>
</html>
