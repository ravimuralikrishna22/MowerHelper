@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
@*    <meta name="viewport" content="width=device-width" />*@
         <title>Mower Helper-Find an Mower Helper</title>
     <script type="text/javascript">
         $(document).ready(function () {
             var text = "@ViewBag.txtArticleDesc1";
             document.getElementById('txtArticleDesc1').value = text;
         });
            </script>
    <script type="text/javascript">
        function validate1() {
            
            ClearInlineAlert('lblfield1', 'tdmainfield1', 'white');
            ClearInlineAlert('lbldesc1', 'tdmaindesc1', 'white');
           
            document.getElementById('txtArticleName1').value = trim(document.getElementById('txtArticleName1').value)
            if (document.getElementById('txtArticleName1').value == '') {
                //Glb_ShowAlert("Please enter field name ");
                InlineAlert('lblfield1', 'tdmainfield1', 'Please enter field name');
                document.getElementById('txtArticleName1').focus();
                return false;
            }

            document.getElementById('txtArticleDesc1').value = trim(document.getElementById('txtArticleDesc1').value)
            if (document.getElementById('txtArticleDesc1').value == '') {
                //Glb_ShowAlert("Please enter description");
                InlineAlert('lbldesc1', 'tdmaindesc1', 'Please enter description');
                document.getElementById('txtArticleDesc1').focus();
                return false;
            }

        }
</script>
</head>
<body>
@using (Html.BeginForm("EditKnowledgebase", "AdminFaqs", FormMethod.Post))
{
    <div>
    <input type="hidden" id="hdnFieldid" name="hdnFieldid" value="@ViewBag.Fieldid" />
        <table cellspacing="0" cellpadding="0" width="100%" align="center">
                        <tr class="background_color">
                            <td id="tdDesign1" width="1%" runat="server" >
                            <div class="content">
                                <div class="content-box">
                               
                                <div class="content-box-content">
                                 
                                <table id="EditService1" class="border_style" cellspacing="1" cellpadding="4" width="100%"
                                    align="center" border="0">
                                    <tr class="white_color">
                                    <td align="right"><font color="red"><b>*</b></font> <strong>Category name&nbsp;:&nbsp;</strong></td>
                                    <td align="left" id="tdmaincategory1">
                                    <label id="lblcategoryname" style="font-weight:bold;">@ViewBag.lblcategoryname</label>
                                   <input type="hidden" name="txtcategoryname1" id="txtcategoryname1" value="@ViewBag.lblcategoryname" />
                                    @*<input type="text" id="txtcategoryname" name="txtcategoryname" autocomplete="off" class="textfield" style="width:280px;" />*@
                                   @* <asp:TextBox ID="txtcategoryname" autocomplete="off" runat="server" Width="280px" CssClass="textfield"></asp:TextBox>*@
                               <label id="lblcategory1" style="font-weight:bold;"></label>
                                    </td>
                                    </tr>
                                    <tr class="white_color">
                                        <th style="height: 24px" align="right" width="25%">
                                            <font color="red"><b>*</b></font> <strong>Field name&nbsp;:&nbsp;</strong></th>
                                        <td align="left" style="width: 733px" id="tdmainfield1">
                                         @Html.TextBox("txtArticleName1", (string)ViewBag.txtArticleName1, new { @class = "textfield", style = "width:280px;", maxlength = "1000", autocomplete = "off" })
                                            &nbsp;&nbsp;<label id="lblfield1" style="font-weight:bold;"></label>
                                           </td>
                                    </tr>
                                    <tr class="white_color">
                                        <th align="right" width="25%">
                                            <font color="red"><b>*</b></font> <strong>Description&nbsp;:&nbsp;</strong> </th>
                                        <td align="left" style="width: 733px" id="tdmaindesc1">
                                        <textarea id="txtArticleDesc1" name="txtArticleDesc1" class="textfield" rows="2" cols="2" maxlength="1000" style="width:280px; height: 100px;"></textarea>
                                                &nbsp;&nbsp;<label id="lbldesc1" style="font-weight:bold"></label>
                                            
                                        </td>
                                    </tr>
                                  
                                </table>
                                
                                <table cellpadding="0" cellspacing="0" border="0" width="100%" align="center">
                                    <tr width="98%" align="right" class="white_color">
                                        <td align="right" style="padding-right:10px; padding-bottom:5px; padding-top:5px;">
                                        <input type="submit" id="btndSave1" name="btndSave1" class="button" onclick="return validate1();" value="Save" />
                                            <input type="submit" id="btndCancel1" name="btndCancel1" class="button Editclose" value="Cancel" />
                                          
                                            </td>
                                    </tr>
                                </table></div></div></div>
                            </td>
                        </tr>
                    </table>
    </div>
}
</body>
</html>
