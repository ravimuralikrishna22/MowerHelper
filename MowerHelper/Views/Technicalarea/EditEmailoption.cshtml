    <script type="text/javascript">
        function Edit_Validate() {
            document.getElementById('Edit_tdbody').bgColor = "White";
            document.getElementById('Edit_lblErrbody').style.display = 'none';

            var title = trim(document.getElementById('Edit_txtTitle').value);
            document.getElementById('Edit_txtTitle').value = title;
            if (document.getElementById('Edit_txtTitle').value == '') {
                document.getElementById('Edit_lblErrbody').style.display = '';
                document.getElementById('Edit_lblErrbody').innerHTML = 'Please enter email msg body';
                document.getElementById('Edit_tdbody').bgColor = "orange";
                document.getElementById('Edit_txtTitle').focus();
                return false;
            }
            else {
                document.getElementById('Edit_tdbody').bgColor = "White";
                document.getElementById('Edit_lblErrbody').style.display = 'none';

            }
            if (document.getElementById('Edit_txtTitle').value.length > 50) {
                document.getElementById('Edit_lblErrbody').style.display = '';
                document.getElementById('Edit_lblErrbody').innerHTML = 'email msg body description can be up to 50 characters';
                document.getElementById('Edit_tdbody').bgColor = "orange";
                document.getElementById('Edit_txtTitle').focus();
                return false;
                return false;
            }
            else {
                document.getElementById('Edit_tdbody').bgColor = "White";
                document.getElementById('Edit_lblErrbody').style.display = 'none';

            }


        }
    </script>
