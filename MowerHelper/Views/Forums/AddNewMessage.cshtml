<!DOCTYPE html>

<html>
<head>
@*    <meta name="viewport" content="width=device-width" />*@
    <script src="~/Scripts/Expire.js" type="text/javascript"></script>
       <title>Mower Helper-Find an Mower Helper</title>

   <script language="javascript" type="text/javascript">
       $(document).ready(function () {
           document.getElementById('rdStatus_0').checked = true;
       });

       function rbtncheck() {

           document.getElementById('rdStatus_0').checked = true;
           document.getElementById('rdStatus_1').checked = false;
           document.getElementById('rdStatus_2').checked = false;


       }
       function rbtncheck1() {
           document.getElementById('rdStatus_0').checked = false;
           document.getElementById('rdStatus_1').checked = true;
           document.getElementById('rdStatus_2').checked = false;
       }
       function rbtncheck2() {
           document.getElementById('rdStatus_0').checked = false;
           document.getElementById('rdStatus_1').checked = false;
           document.getElementById('rdStatus_2').checked = true;
       }

        </script>
   <script type="text/javascript">

       function clearalerts() {
           ClearInlineAlert('lbltopic', 'tdtopic', 'white')
           ClearInlineAlert('lbldesc', 'tddesc', 'white')
       }
       function validatetask() {
           if (trim(document.getElementById('txtSubject').value) == '') {
               clearalerts()
               var strcptcode = document.getElementById('txtSubject').value;
               strcptcode = strcptcode.replace(/^\s+/, '');
               document.getElementById('txtSubject').value = strcptcode;
               InlineAlert('lbltopic', 'tdtopic', 'Please enter fourm topic');
               document.getElementById('txtSubject').focus();
               return false;
           }
           else {
               ClearInlineAlert('lbltopic', 'tdtopic', 'white')
           }

           if (document.getElementById('txtSubject').value.length > 100) {
               clearalerts()
               InlineAlert('lbltopic', 'tdtopic', 'Please enter at most 100 characters in the topic');
               document.getElementById('txtSubject').focus();
               return false;
           }
           else {
               ClearInlineAlert('lbltopic', 'tdtopic', 'white')
           }
           if (document.getElementById('txtdesc').value == '') {
               clearalerts()
               InlineAlert('lbldesc', 'tddesc', 'Please enter description.');
               document.getElementById('txtdesc').focus();
               return false;
           }
           if (document.getElementById('txtdesc').value.length > 5000) {
               clearalerts()
               InlineAlert('lbldesc', 'tddesc', 'Description can be up to 1000 characters.');
               document.getElementById('txtdesc').focus();
               return false;
           }
           else {
               ClearInlineAlert('lbldesc', 'tddesc', 'white')
           }
       }
</script>

</head>
<body>




@using (Html.BeginForm("AddNewMessage", "Forums", FormMethod.Post, null))
{
                <input type="hidden" id="Forum_ID" name="Forum_ID" value="@ViewBag.Forum_ID" />
    
