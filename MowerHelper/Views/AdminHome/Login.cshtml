@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
   @* <meta name="viewport" content="width=device-width" />*@
   <title>Mower Helper-Find an Mower Helper</title>
            @Scripts.Render("~/ThScripts/ThJquery")
    @Styles.Render("~/Content/themes/base/TherpistStyles")
          <script src="~/SCRIPTS/scriptCognetwork.js" type="text/javascript"></script>
      <script type="text/javascript">
          function ValidatePassword() {
              var uname = trim(document.getElementById('txtUsername').value);
              document.getElementById('txtUsername').value = uname;
              if (document.getElementById('txtUsername').value == '') {
                  document.getElementById('lbluname').style.display = '';
                  document.getElementById('lbluname').innerHTML = 'Please enter user name';

                  document.getElementById('tduname').bgColor = "orange";
                  document.getElementById('txtUsername').focus();

                  return false;
              }
              else {
                  document.getElementById('tduname').bgColor = "White";
                  document.getElementById('lbluname').style.display = 'none';

              }



              var pwd = trim(document.getElementById('txtPwd').value);
              document.getElementById('txtPwd').value = pwd;
              if (document.getElementById('txtPwd').value == '') {
                  document.getElementById('lblpwd').style.display = '';
                  document.getElementById('lblpwd').innerHTML = 'Please enter pass word';

                  document.getElementById('tdpwd').bgColor = "orange";
                  document.getElementById('txtPwd').focus();

                  return false;
              }
              else {
                  document.getElementById('tdpwd').bgColor = "White";
                  document.getElementById('lblpwd').style.display = 'none';

              }

          }
    </script>
</head>
<body>
    @using (Html.BeginForm("Login", "AdminHome", FormMethod.Post, null))
    {
Html.RenderAction("Topsection", "Tools");
        
        @Html.Partial("_NavigationTool")
<table class="background_color" cellspacing="0" cellpadding="8" width="100%" align="center"
                border="0">
                <tr height="10" runat="server">
                    <td align="right" width="40%">
                           <strong>User Name :</strong>
                    </td>
                    <td width="60%" align="left" id="tduname" runat="server">
                         @Html.TextBox("txtUsername", null, new { @class = "textfield", MaxLength = "50", style = "width:150px", autocomplete = "off" })
                         &nbsp;&nbsp;&nbsp;<span id="lbluname" style="display: none;"></span>
                    </td>
                </tr>
                <tr height="10" runat="server">
                    <td align="right" width="40%">
                        <strong>Password :</strong>
                    </td>
                    <td width="60%" align="left" id="tdpwd" runat="server">
                         @Html.Password("txtPwd", null, new { @class = "textfield", MaxLength = "50", style = "width:150px", autocomplete = "off" })
                         &nbsp;&nbsp;&nbsp;<span id="lblpwd" style="display: none;"></span>
                    </td>
                </tr>
                                <tr height="10" runat="server">
                    <td align="right" width="40%">
                    </td>
                    <td width="60%" align="left" runat="server">
                    <input type="submit" id="btnSave" value="Submit" title="Submit" class="button" />
                    @*<input type="submit" id="btnSave" value="Submit" title="Submit" class="button" onclick="return ValidatePassword();" />*@
                   @* <input type="button" class="close1 button" name="Cancel" value="Cancel" />*@
                    </td>
                </tr>
            </table>
    }
</body>
</html>
