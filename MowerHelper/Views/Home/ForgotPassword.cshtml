        function CheckUserInfo() {

            if (document.getElementById("txtUserName").value == "") {
                alert("Please enter email.")
                document.getElementById("txtUserName").focus();
                return false;
            }
            else {
                if (MyChars(document.getElementById("txtUserName")) == 'SpaceError') {
                    alert("Invalid entry!!! enter email with out space.")
                    document.getElementById("txtUserName").focus();
                    return false;
                }
            }
            if (document.getElementById('txtUserName').value != "") {
                if (ValidateEmail(document.getElementById('txtUserName')) == 0) {
                    alert("Please enter valid email");
                    document.getElementById('txtUserName').focus();
                    return false;
                }

            }
        }
        function chkemail() {
            var strchkemail = document.getElementById('txtUserName').value;
            strchkemail = strchkemail.replace(/^\s+/, '');
            document.getElementById('txtUserName').value = strchkemail;
        }
