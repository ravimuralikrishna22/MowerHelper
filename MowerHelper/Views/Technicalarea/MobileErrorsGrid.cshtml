                }


                if (dId == "3") {
                    if (confirm("Do you want to delete the feedback ?")) {
                        var StatusID = "4";
                        window.location = '../Technicalarea/Deletefeedback?BugID=' + BugID;

                        return false;
                    }

                    else {
                        $('.ddlactionclass').val("0");
