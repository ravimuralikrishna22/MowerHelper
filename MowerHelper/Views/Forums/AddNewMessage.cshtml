                        <input type="submit" title="Save" value="Save"  onclick="return validatetask();" class="button" />
                            &nbsp;
                           <input type="button" class="btnTask button" name="Cancel" value="Cancel" />
                        </td>
                    </tr>
                </table>
                                                 
    </div>
    </div>
}






     
